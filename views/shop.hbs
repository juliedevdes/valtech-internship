<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&family=Lobster&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./styles.css" />

    <title>CraftStudio</title>
  </head>
{{>header}}
{{>navigation}}
<section class="container">
  <input type="checkbox" id="bestSeller">
  <label for="bestSeller">best-seller</label>

  <input type="checkbox" id="sale">
  <label for="sale">sale</label>

  <select name="cat" id="cat">
    <option value="all">All</option>
    <option value="salad">Salad</option>
  </select>

</section>
<section class="products container">
<ul class="list products_list">
{{#each products}}
  <li class="products_item">
    <a href="shop/{{_id}}" class="link products_link">
    <img src={{img}} alt="product image" width="250" >
    <h3 class="products_title">{{productName}}</h3>
    <p class="products_category">{{category}}</p> 
    {{#if isOnSale}}
    <p class="products_sale">{{salePercentage}}% sale!</p>
    <p class="products_price products_price-old">${{price}}</p> 
        <p class="products_price">{{#priceCounter price salePercentage}}{{/priceCounter}}</p>
    {{else}}
        <p class="products_price">${{price}}</p> 
    {{/if}}
    </a>
    <button class="products_buy-btn" dataId={{_id}}>BUY</button>
    </li>
{{/each}}
</ul>
</section>
{{>footer}}
{{>rights}}
    <script type="module" src="./js/cart.js"></script>
    <script type="module" src="./js/filters.js"></script>
</html>