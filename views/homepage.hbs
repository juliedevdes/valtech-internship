    <section class="hero container">
      <div class="owl-carousel owl-theme carousel">
        {{#each products}}
          <div
            class="carousel-item"
            style="background-image: linear-gradient(rgba(47,48,58,0.4), rgba(47,48,58,0.4)) ,url({{img}}); width: 600px;"
          >
          <a href="/shop/{{_id}}" class="link">
