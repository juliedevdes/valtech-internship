    <section class="new-dishes container">
      <h2 class="new-dishes_title">Newest Dishes</h2>
      <ul class="new-dishes_card-list list">
        {{#each products}}
          <li class="new-dishes_card-item">
            <a href="/shop/{{_id}}" class="link new-dishes_cart">
              <div
                class="new-dishes_card-picture"
                style="background-image: url({{img}});"
              >
              </div>

              <h3 class="new-dishes_card-title">{{productName}} {{#if bestSeller}}
                {{>star}}
                {{/if}}</h3>
              {{#if isOnSale}}
              <p style="text-align: center; margin-bottom:10px">
                  <span
                  class="new-dishes_card-price"
                  style="text-decoration:line-through; color: grey"
                >${{price}}</span>
                <span class="new-dishes_card-price">${{#priceCounter
                    price
                    salePercentage
                  }}{{/priceCounter}}</span>
              </p>
            {{else}}
              <p style="text-align: center; margin-bottom:10px"><span class="new-dishes_card-price">${{price}}</span></p>
            {{/if}}
            </a>
          </li>
        {{/each}}
      </ul>
    </section>

    <section class="container deals">
    <div class="deals--left">
    <h2 class="deals-title">Deal of the week</h2>
    {{#with bestDeal}}
      <a href="/shop/{{_id}}" class="deals--left_card link">

        <div
          style="background-image: url({{img}});"
          class="deals--left_card-img"
        ></div>

        <div class="deals--left_card--down">
          <div>
            <h3 class="deals--left_card-title">
              {{#if bestSeller}}
              {{>star}}
              {{/if}}
              <span>{{productName}}</span>
              </h3>
            <p class="deals--left_sale">{{salePercentage}}% sale!</p>
            <p style="text-align: center; margin-left:5px">
              <span
                class="products_price products_price-old"
                style="text-decoration:line-through; color:grey;"
              >${{price}}</span>
              <span class="products_price">${{#priceCounter
                  price
                  salePercentage
                }}{{/priceCounter}}</span></p>
          </div>
        </div>
      </a>
    {{/with}}

     </div>

  <div class="deals--right">
    <div class="deals--right_header">
      <h2 class="deals-title" style="font-size: 37px;">Sales!</h2>
    </div>

    <ul class="deals--right_card-list list">
      {{#each onSale}}
        <li class="deals--right_card-item" style="position: relative;">
          <a href="/shop/{{_id}}" class="link deals--right_card-link">
          <img
            class="deals--right_img"
            src={{img}}
          ></img>
          <div >
