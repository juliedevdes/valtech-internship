              <div
                class="deals--right_img"
                style="background-image: url({{img}});"
              ></div>
              <div>
                <h3 class="deals--right-title">{{productName}}</h3>
                <p class="deals--right-price">{{price}} $</p>
                <p>{{isOnSale}} {{salePercentage}}% off </p>
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </section>

    <section class="categories container">
      <a class="link" href="/categories"><h3 class="categories_title">Shop By Categories</h3></a>
      <ul class="categories_list list">
       {{#each categories}}
        <li class="categories_item">
          <a href="/categories/{{name}}" class="link">
          <div style="background-image:url({{img}});" class="categories_img">
            <p class="categories_btn">{{name}}</p>
          </div>
          </a>
        </li>
       {{/each}}
      </ul>
    </section>

    <section class="best-seller container">
      <h3 class="best-seller_title">Best Seller</h3>

      <ul class="best-seller_card-list list">
        {{#each bestSellers}}
          <li class="best-seller_card-item" style="position: relative;">
            <img src={{img}} class="best-seller_img" alt="product-img" />
            <h3 class="best-seller_card-title">{{productName}}</h3>
            <p class="best-seller_card-price">{{price}}$</p>
            {{#if bestSeller}}
              <div class="products_bs">
                {{>star}}
                <p class="products_bs-title">best-seller</p>
              </div>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </section>

