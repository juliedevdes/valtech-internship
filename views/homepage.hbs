    <section class="hero container">
      <div class="owl-carousel owl-theme carousel">
        {{#each products}}
          <div
            class="carousel-item"
            style="background-image: url({{img}}); width: 600px;"
          >
            <p class="hero-sub">{{category}}</p>
            <h1 class="hero-title">{{productName}}</h1>

            {{#if isOnSale}}
              <p class="products_sale">{{salePercentage}}% sale!</p>
              <p style="text-align: center;">
                <span
                  class="products_price products_price-old"
                  style="text-decoration:line-through; color:grey;"
                >${{price}}</span>
                <span class="products_price">${{#priceCounter
                    price
                    salePercentage
                  }}{{/priceCounter}}</span></p>
            {{else}}
              <p class="products_price">${{price}}</p>
            {{/if}}
            <button type="button" class="carousel-item_btn">add</button>
