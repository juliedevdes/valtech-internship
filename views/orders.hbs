<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Jost:wght@400;700&family=Lobster&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="./styles.css" />

    <title>CraftStudio</title>
  </head>
  <body>
    {{>header}}
    {{>navigation}}
    <section class="order container">

      <h2>Your order</h2>
      <p>products</p>
      <ul class="order-list list"></ul>

      <form id="order-form" class="order-form">
       <div style="display: flex; flex-direction:column;">
      <label for="address">
        <input type="text" placeholder="address" id="address">
      </label> 

      <label for="email">
        <input 
        type="email"
        placeholder="email" 
        id="email">
      </label> 

    <label for="phone">
        <input 
        autocomplete="off"
        placeholder="phone"
        type="text"
        id="phone">
      </label> 

        
    <select style="width: 200px; " class="minimal" name="paymentMethod" id="paymentMethod">
    <option value="cash">cash</option>
    <option value="card">card</option>
    </select>
    <button>SUBMIT</button>
    </div>  
    </form>
      
     </section>
    {{>footer}}
    {{>rights}}
    <script src="http://localhost:3000/js/orders.js" ></script>
  </body>
</html>