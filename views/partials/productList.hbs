{{#each products}}
  <li class="products_item">
    <a href="shop/{{_id}}" class="link products_link">
      <img src={{img}} alt="product_image" width="250" />
      <h3 class="products_title">{{productName}}</h3>
      {{#if bestSeller}}
        <div class="products_bs">
          <svg class="products_star" width="20" height="20" fill="#F6AE13">
            <path
              d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
            ></path>
          </svg>
          <p class="products_bs-title">best-seller</p>
        </div>
      {{/if}}
      <p class="products_category">{{category}}</p>
      {{#if isOnSale}}
        <p class="products_sale">{{salePercentage}}% sale!</p>
        <p style="text-align: center;">
          <span
            class="products_price products_price-old"
            style="text-decoration:line-through; color:grey;"
          >${{price}}</span>
          <span class="products_price">${{#priceCounter
              price
              salePercentage
            }}{{/priceCounter}}</span></p>
      {{else}}
        <p class="products_price">${{price}}</p>
      {{/if}}
    </a>
    <button class="products_buy-btn" dataId={{_id}}>BUY</button>
  </li>
{{/each}}